<div class="grid place-items-center h-[500px]">
  <div class="space-y-2 bg-white px-7 py-4 rounded-sm border">
    <h2 class="font-bold text-secondary text-3xl text-center">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="grid">
        <%= f.label :email, class: "input-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input-primary" %>
      </div>

      <div class="grid mt-2">
        <div>
          <%= f.label :password, class: "input-label" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "input-primary" %>
      </div>

      <div class="grid mt-2">
        <%= f.label :password_confirmation, class: "input-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-primary" %>
      </div>

      <div class="mt-4 mb-3">
        <%= f.submit "Sign up", class: "btn-primary w-full" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>


