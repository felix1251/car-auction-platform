<div class="grid place-items-center h-[600px]">
  <div class="space-y-2 bg-white px-7 py-4 rounded-sm border">
    <h2 class="font-bold text-secondary text-3xl text-center">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { class: "grid gap-2 w-[300px]" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= input_text_component form: f, label: :fullname, name: :fullname %>
      <%= input_number_component form: f, label: :phone_no, name: :phone_no %>
      <%= input_text_component form: f, label: :email, name: :email %>
      <%= input_password_component form: f, label: :password, name: :password %>
      <%= input_password_component form: f, label: :password_confirmation, name: :password_confirmation %>
      <div class="mt-3 mb-3">
        <%= f.submit "Sign up", class: "btn-primary w-full" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>


